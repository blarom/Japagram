<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorMonochromeBlendTransparent"
    android:padding="2dp" >
    
    <TextView android:id="@+id/UpperPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/Kanji"
		android:textColor="?attr/textConjugatorConjugationChooserUpperColor"
		android:textSize="16sp"
		android:textStyle="bold" />
    
    <TextView
        android:id="@+id/LowerPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:text="@string/English"
        android:textColor="?attr/textConjugatorConjugationChooserLowerColor" />

</LinearLayout>
